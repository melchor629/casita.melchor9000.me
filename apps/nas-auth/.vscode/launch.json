{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "dev",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "NODE_DEBUG": "true"
      },
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeArgs": ["--inspect"],
      "outputCapture": "std"
    }
  ]
}
