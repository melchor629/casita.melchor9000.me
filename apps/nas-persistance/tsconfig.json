{
  "extends": [
    "@melchor629/tsconfigs/node.json",
    "@melchor629/tsconfigs/buildable.json",
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "swc": true,
    "files": true
  },
  "include": [
    "src/",
    "*.config.js",
    "*.config.ts",
  ]
}
