{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "dev",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/packages/ledefault",
      "program": "${workspaceFolder}/packages/ledefault/src/server.ts",
      "runtimeArgs": [
        "--experimental-strip-types",
      ],
      "env": {
        "NODE_ENV": "development",
      },
      "envFile": "${workspaceFolder}/packages/ledefault/.env",
      "outputCapture": "std",
    }
  ]
}
